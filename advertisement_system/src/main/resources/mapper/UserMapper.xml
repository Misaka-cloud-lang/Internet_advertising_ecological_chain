<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.advertisement_system.mapper.UserMapper">
    <select id="findByUsername" resultType="org.example.advertisement_system.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <insert id="insertUser" parameterType="org.example.advertisement_system.entity.User">
        INSERT INTO user (username, password)
        VALUES (#{username}, #{password})
    </insert>
</mapper>
